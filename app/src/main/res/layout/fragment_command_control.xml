<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Device info card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/device_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Управление устройством"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/command_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Готово к отправке команд"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Commands section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Доступные команды"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Command buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_command_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Ноль"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button"
            app:icon="@drawable/ic_send"
            app:iconGravity="textStart" />

        <Button
            android:id="@+id/btn_command_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Команда 2"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button"
            app:icon="@drawable/ic_send"
            app:iconGravity="textStart" />

        <Button
            android:id="@+id/btn_command_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Команда 3"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button"
            app:icon="@drawable/ic_send"
            app:iconGravity="textStart" />

    </LinearLayout>

    <!-- Info card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                app:tint="#666666"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Это устройство поддерживает управление командами. Нажмите на кнопку для отправки соответствующей команды."
                android:textSize="13sp"
                android:textColor="#666666" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>